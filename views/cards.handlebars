  {{>header}}

<div class="container-fluid">
  <div class="row justify-content-between">
    {{!-- leftSide --}}
    {{> leftSide}}
    <!-- Main -->
    <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h2>New card</h2>
          <form class="card">
            <div class="form-group">
              <label for="long card">Long Card Number</label>
              <input type="input" class="form-control" id="longCard-input" placeholder="Long Card Number">
            </div>
          <div class="form-group">
            <label for="expire">Expiry date</label>
            <input type="input" class="form-control" id="expire-input" placeholder="mm\yy">
          </div>
          <div class="form-group">
            <label for="lastThree">lastThree</label>
            <input type="input" class="form-control" id="lastThree-input" placeholder="Last 3 Digits">
          </div>
          <div style="display: none" id="alert" class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span> <span class="msg"></span>
          </div>
          <button type="submit" class="btn btn-default">Enter</button>
        </form>
        <br />
      </div>
    </div>
  </div>
    <!-- Right Side -->
    {{> rightSide}}
  </div>
</div>

  {{> footer}}